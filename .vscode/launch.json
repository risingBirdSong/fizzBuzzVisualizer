//https://charlesagile.com/debug-react-typescript
{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug React, TS, Parcel app in Chrome",
      "url": "http://localhost:1234/",
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "__parcel_source_root": "${workspaceFolder}"
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
